#include <stdio.h>
#include <stdlib.h>
#include <time.h>

/* Game --> adivinhação / de 1-100 */

 /* ETAPA 1:                                                                                                *
   * Caso meu chute seja igual ao número secreto, irá aparecer a mensagem "Verdadeiro" "Fim do jogo!".      *
   * Caso meu chute seja diferente do número secreto, irá aparecer "Falso" "Fim de jogo!".                  *
   * Caso deixe minha variável 'chute' sem uma atribuição, a mensagem que aparece é "Falso" "Fim de jogo!". */
  
  /* Estrutura condicional -- if / if-else / if-else-if */
  
  /* FOR (ínicio; fim; contador/incremento)  - (int i = 0; i < 100; i++ [i=i+1])                                  *
   * WHILE (?) {...} --> se minha condição for verdadeira, irá realizar meu escopo.                               *
   * DO-WHILE {...} (?)--> Somente no final a verificação é feita, e só irá repetir meu escopo se for verdadeiro. */
  /* While (numero_secreto != chute) {..} */


jogo(){ 
   /* int numero_secreto = 17; */
  srand(time(0)); /* Uma sementre criada baseada na hora, quando muda a hora, muda o número sortido */
  int numero_secreto = rand() %100; /* Posso escolher atribuir um valor para essa variável ou não */ 
  int chute;
  /* Tenho que tomar cuidado, pois posso ter um retorno que seja lixo eletrônico */
  do{
      printf("Digite um número: ");
      scanf("%d", &chute);
    
   //printf("%d\n", numero_secreto);
    
    if(numero_secreto == chute){
      printf("Você acertou!!\n");
      printf("O número secreto é %d.\n", numero_secreto);
    } else {
      printf("Você errou! Tente novamente.\n");
        if(numero_secreto<chute){
            printf(" ----------------------------------\n");
            printf("|      Dica -> O número é menor!   |\n");
            printf(" ----------------------------------\n");
            printf("\n");
        } else 
            if(numero_secreto>chute) {
                printf(" ----------------------------------\n");
                printf("|     Dica -> O número é maior!   |\n");
                printf(" ----------------------------------\n");
                printf("\n");
              }   
    }
  } while(numero_secreto!=chute);
  printf("\nFim do jogo!");
}
